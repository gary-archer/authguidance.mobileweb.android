<resources>

    <!-- Our main theme uses Material blue colours -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_value</item>
        <item name="android:textColor">@color/text_label</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>

    <!-- The style for header text -->
    <style name="TextViewHeaderStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@color/text_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- The style for label text -->
    <style name="TextViewLabelStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_label</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <!-- The style for value text -->
    <style name="TextViewValueStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_value</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <!-- The style for error summary text -->
    <style name="TextViewErrorSummaryStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_error</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
