<resources>

    <!-- Our main theme uses Material blue colours -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_value</item>
        <item name="android:textColor">@color/text_label</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>

    <!-- The style for the login required view's header text -->
    <style name="LoginRequiredHeaderStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_value</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
