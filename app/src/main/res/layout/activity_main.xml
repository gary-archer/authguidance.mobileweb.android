<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <!-- Makes model a property of this type on the activity's binding object -->
        <variable name="model"
            type="com.authguidance.mobilewebview.app.MainActivityViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- The title area shows the app name -->
        <fragment
            android:id="@+id/title_fragment"
            android:name="com.authguidance.mobilewebview.views.headings.TitleFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_title"/>

        <!-- The menu area shows web integration buttons -->
        <!--fragment
            android:id="@+id/menu_fragment"
            android:name="com.authguidance.mobilewebview.views.headings.MenuFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_menu"/-->

        <!-- When there is an application level error it is rendered via this fragment -->
        <!--fragment
            android:id="@+id/main_error_summary_fragment"
            android:name="com.authguidance.mobilewebview.views.errors.ErrorSummaryFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_error_summary"/-->

        <!-- The navigation fragment occupies the entire view -->
        <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_graph"/>

    </LinearLayout>
</layout>